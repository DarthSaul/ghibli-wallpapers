<% layout('./layouts/boilerplate')%>
<main>
    <div class="page-title">
        <h1>Ghibli Wallpapers</h1>
    </div>
    <div class="col left">
        <h3><%= wallpaper.movie %></h3>
        <div class="col tags">
            <ul>
                <% wallpaper.tags.map(tag => { %>
                <li><a href="/search/?tag=<%= tag %>"><%= tag %></a></li>
                <% } ) %>
            </ul>
        </div>
    </div>
    <section class="panel">
        <img src="<%= wallpaper.url %>" alt="wallpaper" id="wallpaper-img" />
    </section>

    <div class="col download">
        <a href="#" class="dl-btn" id="dl-btn">Download</a>
    </div>
</main>
